{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../Scripts/",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
	"typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
]
  },
  "exclude": [
    "node_modules" 
  ]
}